[Unit]
Description=Prometheus exporter for zookeeper metrics
Documentation=https://github.com/dabealu/zookeeper-exporter

[Service]
Restart=always
User=prometheus
EnvironmentFile=/etc/default/prometheus-zookeeper-exporter
ExecStart=/usr/bin/prometheus-zookeeper-exporter $ARGS
ExecReload=/bin/kill -HUP $MAINPID
TimeoutStopSec=20s
SendSIGKILL=no

[Install]
WantedBy=multi-user.target
